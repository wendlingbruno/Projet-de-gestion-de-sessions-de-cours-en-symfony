{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block contenu %}

<h3 class="textCentre">Liste des stagiaires</h3>
<table  class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nom/Prénom</th>
            <th>Sexe</th>
            <th>Date de naissance</th>
            <th>Ville</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {% for stagiaire in stagiaires %}
            <tr>
                <td>
                    <a href="{{ path('stagiaire_show', { 'id':stagiaire.id }) }}">
                        {{ stagiaire.nom ~ " " ~ stagiaire.prenom }}
                    </a>
                </td>
                <td>
                    {{ stagiaire.sexe }}
                </td>
                <td>
                    {{ stagiaire.dateNaissance | date('d/m/Y') }}
                </td>
                <td>
                    {{ stagiaire.ville }}
                </td>
                <td>
                    {{ stagiaire.telephone }}
                </td>
                <td>
                    {{ stagiaire.email }}
                </td>
                <td>
                    <a href={{ path("stagiaire_edit", {'id':stagiaire.id}) }}>
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                    </a>
                </td>
                <td>
                     <a class="confirmation" href="{{ path('stagiaire_delete', { 'id':stagiaire.id }) }}"> 
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </a>
                </td>
            </tr>

        {% endfor %}
    </tbody>
</table>
  
    <br>
        <a class= "icon_add" href="{{ path('stagiaire_add') }}"><button type="button" class="btn btn-dark">Ajouter un stagiaire</button></a>
    <br><br>
</a>

{% endblock %}



